# Environment Configuration for Coding Contest Platform
# Copy this file to .env and update the values as needed

# Database Configuration
DB_NAME=coding_contest_db
DB_USERNAME=postgres
DB_PASSWORD=postgres_secure_password_change_me
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=8080
SPRING_PROFILES_ACTIVE=docker
JWT_SECRET=your-very-secure-jwt-secret-key-minimum-32-characters-change-in-production

# Frontend Configuration
FRONTEND_PORT=3000
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_change_me

# Code Execution Configuration
EXECUTION_TIMEOUT=30
MAX_MEMORY=128
MAX_CPU_TIME=10

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Nginx Configuration (Production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Development Tools
ADMINER_PORT=8081

# Security Settings (Production)
# Generate strong passwords and secrets for production use
# JWT_SECRET should be at least 32 characters long
# Use tools like openssl rand -base64 32 to generate secure secrets
